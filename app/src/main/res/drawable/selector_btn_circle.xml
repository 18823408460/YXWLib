<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/index_btn_bg2"/>
            <stroke
                android:width="1dp"
                android:color="@color/index_btn_frame2" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="oval">
            <solid android:color="@color/index_btn_bg"/>
            <stroke
                android:width="1dp"
                android:color="@color/index_btn_frame" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
