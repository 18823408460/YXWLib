<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape  android:shape="rectangle" >
            <solid android:color="@color/index_btn_bg2" />
            <corners android:radius="5dip" />
            <stroke
                android:width="1dp"
                android:color="@color/index_btn_frame2" />
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/index_btn_bg" />
            <corners android:radius="5dip" />
            <stroke
                android:width="1dp"
                android:color="@color/index_btn_frame" />
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />

        </shape>
    </item>

</selector>