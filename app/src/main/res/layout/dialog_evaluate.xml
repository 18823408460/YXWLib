<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/rl_evaluate">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_timecount"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_timecount">
            <Button
                android:id="@+id/btn_very_satisfaction"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="非常满意"
                android:textSize="18sp"
                android:background="@drawable/selector_btn_evalute" />
            <Button
                android:id="@+id/btn_satisfaction"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_very_satisfaction"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_btn_evalute"
                android:text="满     意"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_basic_satisfaction"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_satisfaction"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_btn_evalute"
                android:text="基本满意"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_dissatisfaction"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_basic_satisfaction"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_btn_evalute"
                android:text="不 满 意"
                android:textSize="18sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
