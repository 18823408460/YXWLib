<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="2" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:weightSum="2" >
		<Button
			android:id="@+id/btnBus00"
			android:text="未开放"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:textSize="@dimen/sp_text_default"
			android:background="@mipmap/img_businesscategoriy_item1"
			android:layout_weight="1" />
		<Button
			android:id="@+id/btnBus01"
			android:text="未开放"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:textSize="@dimen/sp_text_default"
			android:background="@mipmap/img_businesscategoriy_item2"
			android:layout_weight="1" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:weightSum="2" >
		<Button
			android:id="@+id/btnBus10"
			android:text="未开放"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:textSize="@dimen/sp_text_default"
			android:background="@mipmap/img_businesscategoriy_item3"
			android:layout_weight="1" />
		<Button
			android:id="@+id/btnBus11"
			android:text="未开放"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:textSize="@dimen/sp_text_default"
			android:background="@mipmap/img_businesscategoriy_item4"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
