<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
    <LinearLayout
        android:id="@+id/linearLayoutText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/b_list_item_height"
        android:layout_marginLeft="@dimen/b_list_item_margin"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >
		<TextView
		    android:id="@+id/tvName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/white"
			android:textSize="@dimen/sp_text_default"
		    />
		<TextView
		    android:id="@+id/tvDesc"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/white"
		    android:visibility="gone"
		    />
    </LinearLayout>
	<Button
	    android:id="@+id/btnCall"
	    android:layout_width="@dimen/b_list_item_btn_width"
	    android:layout_height="@dimen/b_list_item_btn_height"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/selector_btn_business"
	    />
</RelativeLayout>