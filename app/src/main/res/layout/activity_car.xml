<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    tools:context=".car.CarMainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/head_car"
        layout="@layout/head_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="100%" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="#aaffaa"
        android:layout_below="@+id/head_car"
        />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager_car"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@id/tablayout_car"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="100%"
        android:layout_above="@+id/bottom_car"
        />

    <include
        android:id="@+id/bottom_car"
        layout="@layout/bottom_car"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="100%" />
</RelativeLayout>